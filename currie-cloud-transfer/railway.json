{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python312", "python312Packages.pip"]
        },
        "install": {
          "cmds": [
            "python -m venv /app/venv",
            "/app/venv/bin/pip install -r backend/requirements.txt"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "/app/venv/bin/python backend/init_db.py && /app/venv/bin/gunicorn --chdir backend app:app --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
