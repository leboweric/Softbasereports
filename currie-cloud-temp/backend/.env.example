# Currie Cloud Platform - Environment Variables
# Copy this file to .env and fill in your values

# Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# JWT
JWT_SECRET_KEY=your-jwt-secret-here

# PostgreSQL Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@localhost:5432/currie_cloud

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,https://your-netlify-site.netlify.app

# Encryption key for storing dealer database credentials
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CREDENTIAL_ENCRYPTION_KEY=your-encryption-key-here

# Port (Railway sets this automatically)
PORT=5000
